    <script>
        function filterNews() {
            const filter = document.getElementById('news-filter').value;
            const newsItems = document.querySelectorAll('#news-list li');

            // Update the page title dynamically based on the selected category
            let categoryName;
            switch (filter) {
                case 'crime':
                    categoryName = 'Crime News';
                    break;
                case 'security':
                    categoryName = 'Security News';
                    break;
                case 'market':
                    categoryName = 'Market News';
                    break;
                case 'sports':
                    categoryName = 'Sports News';
                    break;
                default:
                    categoryName = 'All News';
            }
            document.title = `NewHausaTop - ${categoryName} | Fagen Wasanni`;

            // Filter the news items
            newsItems.forEach(item => {
                const category = item.getAttribute('data-category');
                if (filter === 'all' || category === filter) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
